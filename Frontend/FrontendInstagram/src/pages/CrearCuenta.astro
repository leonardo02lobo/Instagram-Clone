---
import CrearNuevaCuenta from "../layout/CrearNuevaCuenta.astro";
---

<CrearNuevaCuenta titulo="Crear Cuenta">
    <div class="border-2 border-gray-300 rounded-lg p-4">
        <h1 class="text-2xl font-bold mb-4">Crear Cuenta</h1>
        <form method="POST" id="Registrar" class="space-y-4">
            <div class="mb-4">
                <label
                    for="email"
                    class="block text-sm font-medium text-gray-700"
                    >Numero de telefono o Correo Electronico</label
                >
                <input
                    type="text"
                    id="email"
                    name="email"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 text-white"
                />
            </div>
            <div class="mb-4">
                <label
                    for="password"
                    class="block text-sm font-medium text-gray-700"
                    >Contrase√±a</label
                >
                <input
                    type="password"
                    id="password"
                    name="password"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 text-white"
                />
            </div>
            <div class="mb-4">
                <label
                    for="created_at"
                    class="block text-sm font-medium text-gray-700"
                    >Nombre Completo</label
                >
                <input
                    type="text"
                    id="created_at"
                    name="created_at"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 text-white"
                />
            </div>
            <div class="mb-4">
                <label
                    for="username"
                    class="block text-sm font-medium text-gray-700"
                    >Nombre de usuario</label
                >
                <input
                    type="text"
                    id="username"
                    name="username"
                    required
                    class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 text-white"
                />
            </div>
            <button
                type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700"
                >Inscribirse</button
            >
        </form>
    </div>
</CrearNuevaCuenta>
