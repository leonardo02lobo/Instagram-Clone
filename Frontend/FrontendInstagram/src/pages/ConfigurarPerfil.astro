---
import Layout from "../layout/Layout.astro";
---

<Layout titulo="Editar Perfil">
    <div class="max-w-xl mx-auto px-4 py-8">
        <form id="form-editar-perfil" class="space-y-6">
            <div class="flex items-center space-x-6">
                <div class="relative group">
                    <img
                        src=""
                        id="imagenPerfil"
                        alt="Foto de perfil"
                        class="w-20 h-20 rounded-full object-cover border border-gray-300"
                    />
                    <div
                        class="absolute inset-0 bg-black bg-opacity-50 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer"
                    >
                        <span class="text-white text-xs font-medium"
                            >Cambiar</span
                        >
                    </div>
                </div>
                <div>
                    <h2 class="text-xl font-semibold" id="nombreUsuario">
                    </h2>
                    <label
                        for="input-foto"
                        class="text-sm font-medium text-blue-500 cursor-pointer"
                    >
                        Cambiar foto de perfil
                    </label>
                    <input
                        type="file"
                        id="input-foto"
                        accept="image/*"
                        class="hidden"
                    />
                </div>
            </div>

            {/* Sección Biografía */}
            <div>
                <label
                    for="bio"
                    class="block text-sm font-medium text-gray-700 mb-1"
                >
                    Biografía
                </label>
                <textarea
                    id="bio"
                    name="bio"
                    maxlength="150"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="Escribe algo en tu Bio"
                    ></textarea
                >
                <div class="flex justify-between mt-1">
                    <span id="contador-caracteres" class="text-xs text-gray-500"
                        >0/150</span
                    >
                    <span class="text-xs text-gray-500"
                        >Máx. 150 caracteres</span
                    >
                </div>
            </div>
            <button
                type="submit"
                class="w-full bg-blue-500 text-white py-2 px-4 rounded-md font-medium hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
                Guardar Cambios
            </button>
        </form>
    </div>
</Layout>
<script src="./../Script/EditarPerfil.ts"></script>
<style>
    textarea {
        min-height: 100px;
        resize: vertical;
    }
</style>
